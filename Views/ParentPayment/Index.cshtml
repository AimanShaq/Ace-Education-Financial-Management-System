@model IEnumerable<Ace_Tuition_WBL.ViewModel.ParentPaymentViewModel>

@{
    Layout = "~/Views/Shared/_LayoutParent.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Pending Payment</h3>
        <p align="right">
            @*@Html.ActionLink("Create New", "Create")*@
        </p>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Receipt ID</th>
                    <th>Bill Date</th>
                    <th>Student Name</th>
                    <th>Receipt Total</th>
                    <th>Amount Paid</th>
                    <th>Receipt Status</th>
                    <th>
                        Manage
                    </th>
                </tr>
            </thead>
                
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.receiptdetails.ReceiptID
                    </td>
                    <td>
                        @String.Format("{0:dd/MM/yyyy}", item.receiptdetails.BillDate)
                    </td>
                    <td>
                        @item.receiptdetails.tbStudent.StudentName
                    </td>
                    <td>
                        RM @String.Format("{0:0.00}", item.receiptdetails.ReceiptTotal)
                    </td>
                    <td>
                        RM @String.Format("{0:0.00}", item.receiptdetails.ReceiptAmount)
                    </td>
                    <td>
                        @if (item.receiptdetails.ReceiptStatus == 0)
                        {
                            <p style="color:orange;">Outstanding</p>
                        }
                        else if (item.receiptdetails.ReceiptStatus == 1)
                        {
                            <p style="color:darkblue">Pending Approval</p>
                        }
                        else if (item.receiptdetails.ReceiptStatus == 2)
                        {
                            <p style="color:forestgreen">Accepted</p>
                        }
                        else if (item.receiptdetails.ReceiptStatus == 3)
                        {
                            <p style="color:darkred">Rejected</p>
                        }

                    </td>
                    <td>
                        @Html.ActionLink("Upload Proof", "Edit", new { id = item.receiptdetails.ReceiptID }, new { @class = "btn btn-warning" })
                        &nbsp;
                        @Html.ActionLink("Details", "Details", new { id = item.receiptdetails.ReceiptID }, new { @class = "btn btn-info" })
                    </td>
                </tr>
                }
            </tbody>
                
        </table>
    </div>
</div>