@model IEnumerable<Ace_Tuition_WBL.Models.tbPackage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["User_Id"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Package fee list</h3>
        <p align="right">
            @*@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })*@
        </p>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PackageName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PackageDesc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PackageFee)
                </th>
                <th>Manage</th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.PackageStat != 0)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PackageName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PackageDesc)
                        </td>
                        <td>
                            RM @Html.DisplayFor(modelItem => item.PackageFee)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.PackageStat }, new { @class = "btn btn-warning" }) 
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.PackageStat }, new { @class = "btn btn-danger" })    *@
                        </td>
                    </tr>
                }
            }

        </table>
        </div>
    </div>
