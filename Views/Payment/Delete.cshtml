@model Ace_Tuition_WBL.Models.tbReceipt

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-1"> </div>
    <div class="card col-10">
        <div class="card-header">
            <h1 class="card-title, text-center">Delete Payment</h1>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <div class="form-horizontal, align-content-center">
                    <hr />
                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Receipt ID:
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.ReceiptID, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Parent Name:
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.tbStudent.tbParent.ParentName, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Student Manage:
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.tbStudent.StudentName, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Early Payment:
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.earlyPay, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            First Time Registration:
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.tbStudent.tbParent.ParentReg, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Discount:
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.tbStudent.tbParent.B40Status, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Total Fee
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.ReceiptTotal, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Payment Amount
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.ReceiptAmount, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Payment Date
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.ReceiptDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Payment Description
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.ReceiptDesc, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">
                            Receipt Proof
                        </label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.ReceiptProof, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-2">Payment Status:</label>
                        <div class="col-md-2">
                            @if (Model.ReceiptStatus == 0)
                            {
                                <p>Outstanding</p>
                            }
                            else if (Model.ReceiptStatus == 1)
                            {
                                <p>Pending Approval</p>
                            }
                            else if (Model.ReceiptStatus == 2)
                            {
                                <p>Accepted</p>
                            }
                            else
                            {
                                <p>Rejected</p>
                            }
                            @Html.ValidationMessageFor(model => model.ReceiptStatus, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*<div class="row">
                        <div class="form-group col-6">
                            <div class="col-md-offset-2 col-md-10">

                            </div>
                        </div>
                    </div>*@


                </div>
            </div>
            <div class="card-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>


