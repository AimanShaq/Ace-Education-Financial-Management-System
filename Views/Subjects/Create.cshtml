@model Ace_Tuition_WBL.Models.tbSubject

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Subject</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Subject Codes</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SubjectCodes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SubjectCodes, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Subject Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SubjectNames, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SubjectNames, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Subject Name (Chinese)</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SubjectNameC, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SubjectNameC, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">School Category</label>
        <div class="col-md-10">
            <select  @Html.EditorFor(model => model.CatID, new { htmlAttributes = new { @class = "form-control" } })>
                <option selected>Choose School Category</option>
                <option value="1">Primary [Standard 1 - 6]</option>
                <option value="2">Secondary [Form 1 - 6]</option>
            </select>
            @Html.ValidationMessageFor(model => model.CatID, "", new { @class = "text-danger" })
        </div>
    </div>

