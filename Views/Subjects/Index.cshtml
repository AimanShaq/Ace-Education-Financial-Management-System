@model IEnumerable<Ace_Tuition_WBL.Models.tbSubject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["User_Id"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<div class="row">
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <div class="card col-5">
        <div class="card-header">
            <h3 class="card-title">Subject List for Primary Students</h3>
            <p align="right">
                
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success " })
                
            </p>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectNames)
                    </th>
                    <th>
                        Subject Name (Chinese)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.CatID)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectCodes)
                    </th>
                    <th>Manage</th>
                </tr>

                @foreach (var item in Model.Where(x => x.CatID == 1))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectNames)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectNameC)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.CatID)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectCodes)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SubjectID }, new { @class = "btn btn-warning" }) |

                            @Html.ActionLink("Delete", "Delete", new { id = item.SubjectID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <div class="col-1"></div>
    <div class="card col-5">
        <div class="card-header">
            <h3 class="card-title">Subject List for Secondary Students</h3>
            <p align="right">
                @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-success" })
            </p>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectNames)
                    </th>
                    <th>
                        Subject Name (Chinese)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.CatID)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectCodes)
                    </th>
                    <th>Manage</th>
                </tr>

                @foreach (var item in Model.Where(x => x.CatID == 2))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectNames)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectNameC)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.CatID)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectCodes)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SubjectID }, new { @class = "btn btn-warning" }) |

                           

                            @Html.ActionLink("Delete", "Delete", new { id = item.SubjectID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>