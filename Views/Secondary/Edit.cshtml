@model Ace_Tuition_WBL.Models.tbSecondary

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Secondary Subject Fee</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @*<h4>tbSecondary</h4>*@
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SecondaryID)

    <div class="form-group">
        <label class="control-label col-md-2">No. of Subject</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SecondaryID, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.SecondaryID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Secondary Fee (RM)</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SecondaryFee, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SecondaryFee, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @*@Html.LabelFor(model => model.SecondaryMaterial, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <label class="control-label col-md-2">Material Fee (RM)</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SecondaryMaterial, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SecondaryMaterial, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
