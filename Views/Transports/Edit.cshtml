@model Ace_Tuition_WBL.Models.tbTransport

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Transportation Fee</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.transDPW)

        <div class="form-group">
            <label class="control-label col-md-2">Transport Description:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.transName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.transName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Transport Fee:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.transFee, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.transFee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
